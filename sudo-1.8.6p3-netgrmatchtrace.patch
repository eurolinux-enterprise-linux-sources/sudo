+#ifdef HAVE_INNETGR
+    bool innetgr_lhost = false;
+    bool innetgr_shost = false;
+#endif
     debug_decl(netgr_matches, SUDO_DEBUG_MATCH)
 
     /* make sure we have a valid netgroup, sudo style */
@@ -733,9 +737,39 @@ netgr_matches(char *netgr, char *lhost,
 
