+	                      user ? user : "*",
+	                      domain ? domain : "*",
+	                      netgr);
+    } else {
+	    sudo_debug_printf(SUDO_DEBUG_TRACE,
+	                      "(%s, %s, %s) NOT found in netgroup %s\n",
+	                      shost ? shost : "*",
+	                      user ? user : "*",
+	                      domain ? domain : "*",
+	                      netgr);
